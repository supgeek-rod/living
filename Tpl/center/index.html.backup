{include file="header.html"}
<!-- Start 主体部分 -->
<script type="text/javascript" src="__ROOT__/Tpl/js/bootstrap-datetimepicker.zh-CN.js"></script>
<div id="center">
	<div class="panel panel-default">
		<div class="panel-heading">
			<ol class="breadcrumb">
				<li><a href="__APP__"><span class="glyphicon glyphicon-home"></span> living</a></li>
				<li><a href="__APP__/center/index"><span class="glyphicon glyphicon-user"></span> {$smarty.session.user.name}的个人中心</a></li>
				{if $smarty.const.ACTION_NAME=='index'}
				<li class="active"><span class="glyphicon glyphicon-bell"></span> 提醒与通知</li>
				{/if}
				{if $smarty.const.ACTION_NAME=='task'}
				<li><a href="#"><span class="glyphicon glyphicon-th-list"></span> 提醒事项</a></li>
				<li class="active">所有提醒事项</li>
				{/if}
				{if $smarty.const.ACTION_NAME=='note'}
				<li><a href="#"><span class="glyphicon glyphicon-book"></span> 备忘录</a></li>
				<li class="active">所有备忘录记录</li>
				{/if}
				{if $smarty.const.ACTION_NAME=='menology'}
				<li><a href="#"><span class="glyphicon glyphicon-calendar"></span> 日历</a></li>
				<li class="active">所有日历记录</li>
				{/if}
			</ol>
		</div>
		<div class="panel-body row center_main">
			<div class="col-sm-2">
				<div class="btn-group menu btn-block">
					<button class="btn btn-block btn-success dropdown-toggle" type="button" data-toggle="dropdown">
						<span class="glyphicon glyphicon-th"></span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
							{if $smarty.const.ACTION_NAME=='index'}通知与提醒 {/if}
							{if $smarty.const.ACTION_NAME=='task'}提醒事项 {/if}
							{if $smarty.const.ACTION_NAME=='note'}备忘录 {/if}
							{if $smarty.const.ACTION_NAME=='menology'}日历 {/if}
						&nbsp;
						<span class="caret"></span>
					</button>
					<ul class="dropdown-menu">
					    <li><a href="__APP__/center/index"><span class="glyphicon glyphicon-bell"></span> 通知与提醒</a></li>
					    <li><a href="__APP__/center/task"><span class="glyphicon glyphicon-th-list"></span> 提醒事项</a></li>
					    <li><a href="__APP__/center/note"><span class="glyphicon glyphicon-book"></span> 备忘录</a></li>
					    <li><a href="__APP__/center/menology"><span class="glyphicon glyphicon-calendar"></span> 日历</a></li>
					    <li class="divider"></li>
					    <li><a href="#">帐户管理与设置</a></li>
					</ul>
				</div>
				<ul class="nav2 nav nav-pills nav-stacked">
					<!-- nav -->
					{if $smarty.const.ACTION_NAME=='index'}
					<li class="task active">
						<a href=""><span class="badge pull-right"></span><span class="glyphicon glyphicon-bookmark"></span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;提醒</a>
					</li>
					<li>
						<a href=""><span class="badge pull-right"></span><span class="glyphicon glyphicon-bookmark"></span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;通知</a>
					</li>
					{/if}

					<!-- task nav -->
					{if $smarty.const.ACTION_NAME=='task'}
					<li class="task">
						<a href=""><span class="badge pull-right"></span><span class="glyphicon glyphicon-plus"></span>&nbsp;&nbsp;&nbsp;新增提醒事项</a>
					</li>
					<li class="taskall">
						<a href="javascript:taskAll()"><span class="task-alls badge pull-right">{$taskTotal}</span><span class="glyphicon glyphicon-bookmark"></span> 所有提醒事项</a>
					</li>
					<li class="taskno">
						<a href="javascript:taskNo()"><span class="task-nos badge pull-right">{$taskNo}</span><span class="glyphicon glyphicon-bookmark"></span> 未完成提醒事项</a>
					</li>
					<li class="taskok">
						<a href="javascript:taskOk()"><span class="task-oks badge pull-right">{$taskOk}</span><span class="glyphicon glyphicon-bookmark"></span> 已完成提醒事项</a>
					</li>
					{/if}

					<!-- note nav -->
					{if $smarty.const.ACTION_NAME=='note'}
					<li class="noteall">
						<a href="javascript:return false"><span class="glyphicon glyphicon-plus"></span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;新增备忘录</a>
					</li>
					<li class="noteall active">
						<a href="javascript:return false"><span class="badge pull-right">{$noteTotal}</span><span class="glyphicon glyphicon-bookmark"></span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;备忘录列表</a>
					</li>
					{/if}
				</ul>
				<hr />
				<div style="height:180px; background:#F1F1F1; line-height:180px; text-align:center;">AD   W:col-sm-2 / H:180px</div>
			</div>
			<div class="col-sm-10 row">

				<!-- 通知与提醒 -->
				{if $smarty.const.ACTION_NAME=='index'}
				<div class="col-sm-3 pull-right" style="height:400px; line-height:400px; background:#F1F1F1">This AD&nbsp;&nbsp; W:col-sm-3 / H:400px</div>
				<div class="panel-group col-sm-9" id="accordion">
				<script type="text/javascript">
					$(function(){
						//noteStart();
					});
				</script>
				<div class="panel panel-default" id="note-addedit">
					<div class="panel-heading"><span class="glyphicon glyphicon-bell"></span>&nbsp;&nbsp;&nbsp;&nbsp;提醒与通知</div>
					<div class="panel-collapse in">
						<div class="panel-body" style="min-height:300px">
							abc
						</div>
					</div>
				</div>
				</div>
				{/if}

				<!-- 提醒事项 -->
				{if $smarty.const.ACTION_NAME=='task'}
				<script type="text/javascript">
					$(function(){
						taskAll();
					});
				</script>
				<table class="table table-hover">
					<thead>
						<tr>
							<th>序号</th>
							<th>标题</th>
							<th>事项内容</th>
							<th>提醒时间</th>
							<th>当前状态</th>
							<th>操作</th>
						</tr>
					</thead>
					<tbody></tbody>	
				</table>

				<!-- task 编辑模态框 -->
				<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
					<div class="modal-dialog">
						<div class="modal-content">
							<div class="modal-header">
								<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
								<h4 class="modal-title" id="myModalLabel">修改提醒事项</h4>
							</div>
							<div class="modal-body">
								<div class="input-group">
									<span id="datetimepicker" class="date form_date input-group-btn" data-date-format="dd MM yyyy" data-link-field="task-date" data-link-format="yyyy-mm-dd">
										<button class="btn btn-default" type="button"><span class="glyphicon glyphicon-time"></span></button>
									</span>
									<input type="hidden" id="task-date" value="">
									<script type="text/javascript">
										$('#datetimepicker').datetimepicker({
									        language:  'zh-CN',
									        weekStart: 1,
									        todayBtn:  1,
											autoclose: 1,
											todayHighlight: 1,
											startView: 2,
											minView: 2,
											forceParse: 0
									    });
						            </script>
						            <span class="input-group-addon task-time">未有时间的提醒：</span>
								  	<input type="text" class="form-control task-title" placeholder="提醒事项标题">
								</div>
								<textarea name="taskcontent" class="form-control task-content" rows="4" placeholder="提醒备注"></textarea>
							</div>
							<div class="modal-footer">
								<button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
								<button onclick="taskSubmit()" type="button" class="btn btn-primary">提交修改</button>
							</div>
						</div>
					</div>
				</div>
				<hr />
				<ul class="pagination">
					<li><a href="javascript:taskPage(-1)">&laquo;</a></li>
					<li class="active"><a href="#">1</a></li>
					<li><a href="javascript:taskPage()">2</a></li>
					<li><a href="#">3</a></li>
					<li><a href="#">4</a></li>
					<li><a href="#">5</a></li>
					<li><a href="javascript:taskPage(1)">&raquo;</a></li>
				</ul>
				{/if}

				<!-- 备忘录 -->
				{if $smarty.const.ACTION_NAME=='note'}
				<div class="col-sm-3 pull-right" style="height:400px; line-height:400px; background:#F1F1F1">This AD&nbsp;&nbsp; W:col-sm-3 / H:400px</div>
				<div class="panel-group col-sm-9" id="accordion">
				<script type="text/javascript">
					$(function(){
						noteStart();
					});
				</script>
				</div>
				<div class="panel panel-default" id="note-addedit" style="display:none">
					<div class="panel-heading">
						<div class="input-group note-title">
							<span class="input-group-btn">
								<button onclick="noteBack()" class="btn btn-default" type="button"><span class="glyphicon glyphicon-chevron-left"></a></button>
								<button onclick="noteSubmit()" class="btn btn-default" type="button"><span class="glyphicon glyphicon-ok"></a></button>
							</span>
							<input type="text" class="form-control title" placeholder="Note name">
						</div>
					</div>
					<div class="panel-collapse in">
						<div class="panel-body">
							<textarea placeholder="Note contents" class="form-control content" rows="6"></textarea>
								<input class="id" type="hidden" name="id" />
							</div>
					</div>
				</div>
				{/if}
			</div>
		</div>
	</div>
</div>
<script type="text/javascript" src="__ROOT__/Tpl/js/liv_center.js"></script>
<!-- End 主体部分 -->
{include file="footer.html"}
